<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/TableLayoutLabels"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="3">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp">

        <TextView
            android:id="@+id/textViewLabel18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-3dp"
            android:layout_weight=".3"
            android:gravity="fill_vertical"
            android:text="Total Amount"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/textViewLabel11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-3dp"
            android:layout_weight=".1"
            android:gravity="fill_vertical"
            android:text=":" />

        <TextView
            android:id="@+id/textViewLabelTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-3dp"
            android:layout_weight="1.6"
            android:gravity="fill_vertical"
            android:text="SGD$ 100..." />
    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100sp"
        android:orientation="vertical"
        android:padding="20sp">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YOUR SIGNATURE"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please sign off below before you end your task."
            android:textSize="10sp"
            android:textStyle="normal|italic" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:clickable="true"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <ImageButton
                    android:id="@+id/imageButtonViewSignature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackgroundBorderless"
                    card_view:srcCompat="@drawable/composea"
                    android:layout_gravity="center" />
            </android.support.v7.widget.CardView>
        </FrameLayout>

    </LinearLayout>
</TableLayout>
