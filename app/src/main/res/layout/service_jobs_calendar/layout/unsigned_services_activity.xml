<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/recycler_view_list_padding">

    <FrameLayout
        android:id="@+id/frameLayoutListOfServices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="true">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshCalendarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/unsigned_service_job_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingTop="4sp" />

        </android.support.v4.widget.SwipeRefreshLayout>

        <TextView
            android:id="@+id/textViewUnsignedSJResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:text="Result"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="normal"
            android:visibility="gone" />

    </FrameLayout>


</LinearLayout>