<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewTitleCommentRemarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DRAWING"
        android:textSize="@dimen/topTitleTextSize"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap image to start draw."
        android:textSize="@dimen/subTitleTextSize"
        android:textStyle="normal|italic" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            card_view:cardCornerRadius="0dp"
            card_view:cardElevation="0dp"
            card_view:cardUseCompatPadding="true">

            <ImageButton
                android:id="@+id/imageButtonViewDrawing"
                android:layout_width="wrap_content"
                android:layout_height="340sp"
                android:layout_gravity="center"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="Button Drawing"
                android:src="@drawable/compose" />

        </android.support.v7.widget.CardView>

    </FrameLayout>


</LinearLayout>

